{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="login_background">
    <form class="login" method="post">

        <div class="login_header">
            <h1 class="login_title">Se connecter</h1>
            <p class="login_details">Veuillez vous connecter au compte de votre station !</p>
        </div>
        <div class="login_fields">
            <div>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="login_input" autocomplete="email" required autofocus>
                <label class="login_label" for="inputEmail">Adresse email*</label>
            </div>
            <div>
                <input type="password" name="password" id="inputPassword" class="login_input" autocomplete="current-password" required>
                <label class="login_label" for="inputPassword">Mot de passe*</label>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
        </div>

        {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
        #}

        <div class="login_footer">
            <button class="login_button" type="submit">
                Se connecter
            </button>
            <a href="{{ path('app_register') }}">S'inscrire</a>
            {% if error %}
                <div class="error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% if app.user %}
                <div class="logout">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }} <a href="{{ path('app_logout') }}">Se déconnecter</a>
                </div>
            {% endif %}
        </div>
    </form>
</div>
{% endblock %}
